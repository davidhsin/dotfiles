{
    "editor.accessibilitySupport": "off",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorCustomizations": {
        "sideBar.background": "#181818",
        "titleBar.activeBackground": "#181818",
        "activityBar.background": "#181818",
        "editor.background": "#1E1E1E",
        "editorGroupHeader.tabsBackground": "#181818", // 202020
        "editorRuler.foreground": "#7c6f64",
        // "terminal.background": "#181818", // for gruvbox thmme
    },
    "window.zoomLevel": 1,
    "editor.mouseWheelZoom": true,
    "terminal.integrated.mouseWheelZoom": true,
    "workbench.startupEditor": "none",
    "editor.fontFamily": "Roboto Mono",
    "editor.lineNumbers": "on",
    "notebook.lineNumbers": "on",
    "terminal.integrated.enablePersistentSessions": true, // 之前設定 fasle
    "terminal.integrated.stickyScroll.enabled": false,
    "workbench.colorTheme": "Default Dark+",
    "editor.minimap.enabled": false,
    "chat.agent.enabled": false,

    "editor.tabSize": 2,
    "editor.insertSpaces": true,

    "vim.leader": ",",
    "vim.commandLineModeKeyBindings": [],
    "vim.normalModeKeyBindings": [
        {
            "before": ["r"],
            "commands": [":redo"]
        },
        {
            "before": [";", "w"],
            "commands": [":update"]
        },
        {
            "before": [";", "q"],
            "commands": [":q"]
        },
        {
            "before": ["f", "f"],
            "after": ["y", "i", "w"]
        },
        {
            "before": ["f", "i"],
            "after": ["v", "i", "w", "p"]
        },
        {
            "before": [";", "w", "q"],
            "commands": [
                "workbench.action.files.save",
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": ["<Tab>"],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": ["<S-Tab>"],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": ["<C-j>"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<Tab>"],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": ["<S-Tab>"],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": ["<C-j>"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": [";", "y"],
            "commands": ["editor.action.clipboardCopyAction"]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-h>"],
            "after": ["<Left>"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<Down>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<Up>"]
        },
        {
            "before": ["<C-l>"],
            "after": ["<Right>"]
        }
    ],

    "multiCommand.commands": [
        {
            "command": "multiCommand.openQuickOpenHorizontal",
            "sequence": [
                "workbench.action.acceptSelectedQuickOpenItem",
                "workbench.action.moveEditorToBelowGroup",
                "workbench.action.focusBelowGroup"
            ]
        }
    ]
}
